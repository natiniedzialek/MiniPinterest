@model MiniPinterest.Web.Models.ViewModels.AddBoardRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
       <div class="container">
           <h1>Add New Board</h1>
       </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form label">Description</label>
            <input type="text" class="form-control" id="description" asp-for="Description"/>
        </div>

        <div class="form-check mb-3">
            <label for="form-check-label">Public</label>
            <input class="form-check-input" type="checkbox" id="public" value="true" asp-for="IsPublic">
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Add Board</button>
        </div>
    </form>
</div>