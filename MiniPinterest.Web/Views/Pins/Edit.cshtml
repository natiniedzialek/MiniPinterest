@model MiniPinterest.Web.Models.ViewModels.EditPinRequest

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Pin</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <img src="@Model.ImageUrl" id="imageDisplay" style="width: 300px; margin:10px" />
            </div>

            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" class="form-control" id="heading" asp-for="Title" />
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" id="description" asp-for="Description" />
            </div>

            <div class="form-check mb-3">
                <label for="form-check-label">Public</label>
                <input class="form-check-input" type="checkbox" id="public" value="true" asp-for="IsPublic">
            </div>

            <input type="hidden" id="id" value=@Model.Id asp-for="Id">
            <input type="hidden" id="id" value=@Model.AuthorId asp-for="AuthorId">

            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Update</button>
                <button class="btn btn-danger ms-2" type="submit"
                    asp-area=""
                    asp-controller="Pins"
                    asp-action="Delete">
                    Delete
                </button>
            </div>
        </form>
    }
    else
    {
        <p>
            Pin does not exist.
        </p>
    }
</div>
